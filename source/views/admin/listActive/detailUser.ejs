  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
  <title>Profile</title>
</head>

<body>

  <div class="main-content">
    <!-- Top navbar -->
    <nav class="navbar navbar-top navbar-expand-md navbar-dark" id="navbar-main">
      <div class="container-fluid">
        <!-- Brand -->
        <a class="h4 mb-0 text-white text-uppercase d-none d-lg-inline-block"
          href="https://www.creative-tim.com/product/argon-dashboard" target="_blank"></a>
        <!-- Form -->

        <!-- User -->
    
      </div>
    </nav>
    <!-- Header -->
    <div class="headerProfile header pb-8 pt-5 pt-lg-8 d-flex align-items-center">
      <!-- Mask -->
      <span class="mask bg-gradient-default opacity-8"></span>
      <!-- Header container -->
      <div class="container-fluid d-flex align-items-center">
        <div class="row">
          <div class="col-lg-7 col-md-10">
            <h1 class="display-2 text-white">Detail <%= infor.name %>
            </h1>
        
            <a href="/admin/listActive/waiting-line" class="btn btn-info">Back</a>
          </div>
        </div>
      </div>
    </div>
    <!-- Page content -->
    <div class="container-fluid mt--7">
      <div class="row">
        <div class="col-xl-4 order-xl-2 mb-5 mb-xl-0">
          <div class="card card-profile shadow">
            <div class="row justify-content-center">

              <div class="col-lg-3 order-lg-2">
                <div class="card-profile-image">

                  <div class="avatar-upload">
                    <div class="avatar-edit" style="margin-right:5%; margin-top: 5%;">
                        <input type='file' name="avatar" id="imageUploadAvatar" accept=".png, .jpg, .jpeg"
                       />
                        <label for="imageUploadAvatar"></label>
                        <!-- <button type="submit">hehe</button> -->
                      </form>
                    </div>
                    <div class="avatar-preview">
                      <img  src="<%= infor.Avatar %>" id="Avatar" class="rounded-circle avatar" style="width:200px; height:170px;"></img>
                    </div>
                  </div>

                </div>
              </div>
            </div>


            <div class="card-header text-center border-0 pt-8 pt-md-4 pb-0 pb-md-4">
              <div class="d-flex justify-content-between">

              </div>
            </div>

            <div class="card-body pt-0 pt-md-4" style="margin-bottom: 50px;">
              <div class="row">
                <div class="col">
                  <div class="card-profile-stats d-flex justify-content-center mt-md-5">
                  </div>
                </div>
              </div>
              <div class="text-center">
                <h3>
                  <%= infor.name %><span class="font-weight-light">, 22</span>
                </h3>
                <div class="h5 font-weight-300">
                  <i class="ni location_pin mr-2"></i>TPHCM, VietNam
                </div>
                <div class="rankProfile h5 mt-4">
                  <i class="ni business_briefcase-24 mr-2"></i>Gold Member
                </div>
                <hr class="my-4">
                <p>The gold member always use digital money to do anything for more and more benefit</p>
                <H3>ID Cards</H3>
                <div class="row">
                  <label class="col">On Id Card</label>

                  <label class="col">Bottom Id Card</label>
                </div>
                <div class="row">
                  <img class="col imgID" id="imageOn" src="<%= infor.OnCard %>"  alt="cmnd" >
                  <img class="col imgID" id="imageBottom" src="<%= infor.BottomCard %>"  alt="cmnd" >
                  <!-- <img id="image" /> -->
                  <!-- <img class="col" src="<%= infor.IdCard %>" alt="cmnd" style="width:70px; height:150px;"> -->
                </div>
                <div class="row">
                  <div class="avatar-edit" id="bottomId" style="width: 50px; height: 100px; margin-right: 15%;">
                   
                    <!-- <button type="submit">hehe</button> -->
                    <!-- </form> -->
                  </div>
                  <!-- <button onclick="uploadImage()">Upload Image</button> -->
                  <div class="avatar-edit" id="onId" style="width: 50px; height: 100px; margin-right: 62%;">
                    <!-- <form action="/onCard" method="post" id="onId" enctype="multipart/form-data"> -->
                      <input type='file'id="imageUploadOn" />
                  </div>
                </div>


              </div>
            </div>
          </div>
        
        </div>

        <div class="col-xl-8 order-xl-1">
          <div class="card bg-secondary shadow">
            <div class="card-header bg-white border-0">
              <div class="row align-items-center">
                <div class="col-8">
                  <h3 class="mb-0">My account</h3>
                </div>
              </div>
            </div>
            <div class="card-body">
              <form>
                <h6 class="heading-small text-muted mb-4">User information</h6>
                <div class="pl-lg-4">
                  <div class="row">
                    <div class="col-lg-6">
                      <div class="form-group focused">
                        <label class="form-control-label" for="input-username">Full Name </label>
                        <input type="text" id="input-username" class="form-control form-control-alternative"
                          placeholder="Username" value="<%= infor.name %>">
                      </div>
                    </div>
                    <div class="col-lg-6">
                      <div class="form-group">
                        <label class="form-control-label" for="input-email">Email address</label>
                        <input type="email" id="input-email" class="form-control form-control-alternative"
                          placeholder="<%= infor.address %>">
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-lg-6">
                      <div class="form-group focused">
                        <label class="form-control-label" for="input-first-name">Phone</label>
                        <input type="text" id="input-first-name" class="form-control form-control-alternative"
                          placeholder="First name" value="<%= infor.phone %>">
                      </div>
                    </div>
                    <div class="col-lg-6">
                      <div class="form-group focused">
                        <label class="form-control-label" for="input-first-name">Birthday</label>
                        <input type="text" id="input-first-name" class="form-control form-control-alternative"
                          placeholder="First name" value="<%= infor.birthday %>">
                      </div>
                    </div>
                  </div>
                </div>
              
              </div>
                <hr class="my-4">
            
                <!-- Address -->
             
                <!-- Description -->
             
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <footer class="footer">
    <div class="row align-items-center justify-content-xl-between">
      <div class="col-xl-4 m-auto text-center">
        <div class="row">    
          <% if(infor.announcement == 0){ %>
              <div class="col" >
                  <a href="/admin/listActive/supplyIdCard/<%= infor._id %>" class="btn btn-warning " id="supplyCard" data-id="<%= infor._id %>">Request IDCard</a>
              </div>
              <div class="col">
                  <a href="/admin/listActive/acceptCard/<%= infor._id %>" class="btn btn-info " id="supplyCard" data-id="<%= infor._id %>">Accept IDCard</a>
              </div>

         <% }else{ %>     
          <div class="col" >
              <a  class="btn btn-secondary " >Requested IDCard</a>
          </div>
          <div class="col">
              <a href="/admin/listActive/acceptCard/<%= infor._id %>" class="btn btn-info " id="supplyCard" data-id="<%= infor._id %>">Accept IDCard</a>
          </div>

       <%   } %>
        </div>
      </div>
    </div>
  </footer>
</body>
